
@{
    ViewData["Title"] = "Authentificaion Enseignant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/Style2.css" rel="stylesheet" />


<section id="contacto" class="contact clu">
    <div class="container " style="margin-top:25px;" data-aos="fade-up">

        <div class="section-title">
            <h2>Authentification des enseignants</h2>
            <strong>Veuillez saisir vos données pour vous connecter.</strong>
        </div>

        <div class="row d-flex justify-content-center">

            <div class="col-lg-10 d-flex flex-column justify-content-center about-content">
                <div class="info section-title" style="border-radius:20px">
                    <form asp-controller="Enseignant" asp-action="Connexion" method="post">

                        <div class="form-group">
                            <label for="exampleInputEmail1" style="font-size:large">Nom d'utilisateur</label>
                            <input class="form-control" type="text" name="username"  placeholder="Nom d'utilisateur"/>

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" style="font-size:large">Mot de passe</label>
                            <input class="form-control" type="password" name="password" placeholder="Mot de passe"/>
                        </div>
                        <button type="submit" name="seconnecter" class="btn btn-primary" style="font-family:'Arial Rounded MT'; border-radius:20px">S'authentifier</button>
                    </form>

                    <br />

                    <br />
                    <span style="color:red">
                        @ViewBag.msg
                    </span>
                </div>

            </div>



        </div>

    </div>
</section>


