@using Microsoft.AspNetCore.Http

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/lib/Microsoft.jQuery.Unobtrusive.Ajax/jquery.unobtrusive-ajax.min.js"></script>
<link href="~/css/Style2.css" rel="stylesheet" />
<script src="~/fontawesome-free-5.13.0-web/js/all.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.unobtrusive-ajax.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<section id="contacto" class="contact blu" style="width:100%;">
    <div class="container" data-aos="fade-up" style="padding-top:15px">
        @{ if (Context.Session.GetString("alerts").Equals("true"))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    Bienvenue <strong>@Model.prenom @Model.nom</strong>.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                Context.Session.SetString("alerts", "false");
            }
        }
    </div>
    <div class="row d-flex justify-content-center">

        <div class="col-lg-3 wd" data-aos="fade-up">
            <div class="sidenav" style="border-radius: 20px;">
                <a href="~/Admins/Modifier" class="@ViewBag.edit">
                    <i class="far fa-user-circle"></i>
                    @Model.prenom @Model.nom
                </a>

                <a href="~/Admins/Importation" class="@ViewBag.import">
                    <i class="fas fa-upload"></i>
                    Importation
                </a>
                <a href="~/Admins/Affectation" class="@ViewBag.affect">
                    <table>
                        <tr>
                            <td style="width:10px">
                                <i class="fas fa-user-tie"></i>
                            </td>
                            <td>
                                Affectation  des encadrants
                            </td>
                        </tr>
                    </table>
                </a>
                <a href="~/Admins/EspaceAdmin" class="@ViewBag.search">
                    <i class="fas fa-search"></i>
                    Recherche
                </a>
                <a href="~/Admins/InsertionDates" class="@ViewBag.date">
                    <i class="far fa-calendar-alt"></i>
                    Insertion des dates
                </a>
                <a href="~/Admins/Notes" class="@ViewBag.note">
                    <i class="fas fa-edit"></i>
                    Notes
                </a>

                <a href="~/Admins/Planning" class="@ViewBag.pln">
                    <i class="far fa-file-alt"></i>
                    Planning
                </a>
                <a href="~/Admins/Deconnexion" class="@ViewBag.deconnect">
                    <i class="fas fa-sign-out-alt"></i>
                    Déconnexion
                </a>
            </div>
        </div>

        <div class="col-lg-7" data-aos="fade-up">
            @RenderBody()
        </div>

    </div>
</section>

