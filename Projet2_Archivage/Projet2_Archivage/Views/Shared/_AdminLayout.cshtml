@using Microsoft.AspNetCore.Http

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_MonLayout.cshtml";
}

<script src="~/Content/fontawesome-free-5.13.0-web/js/all.js"></script>
<script src="~/lib/Microsoft.jQuery.Unobtrusive.Ajax/jquery.unobtrusive-ajax.min.js"></script>
<link href="~/Content/css/Style2.css" rel="stylesheet" />

<section id="contact" class="contact minita" style="padding:10px;">
    <div class="container">

        @{ if (Context.Session.GetString("alerts").Equals("true"))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    Vous êtes connecté en tant que <strong>@Model.prenom @Model.nom</strong>.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                Context.Session.SetString("alerts", "false");
            }
        }


        <div class="row">

            <div class="col-lg-3 d-flex align-items-stretch wd" data-aos="fade-up">
                <div class="info-box">
                    <div class="sidenav">
                        <a href="~/Admins/Modifier" class="@ViewBag.edit">
                            <i class="far fa-user-circle"></i>
                            @Model.prenom @Model.nom
                        </a>
                        <a href="~/Admins/Deconnexion" class="@ViewBag.deconnect">
                            <i class="fas fa-sign-out-alt"></i>
                            Déconnexion
                        </a>
                        <a href="~/Admins/Importation" class="@ViewBag.import">
                            <i class="fas fa-upload"></i>
                            Importation
                        </a>
                        <a href="~/SuperUser/EspaceSuperUser" class="@ViewBag.affect">
                            <i class="fas fa-user-tie"></i>
                            Affectation encadrants
                        </a>
                        <a href="~/Admins/EspaceAdmin" class="@ViewBag.search">
                            <i class="fas fa-search"></i>
                            Chercher
                        </a>
                    </div>
                </div>
            </div>

            @RenderBody()
        </div>
    </div>
</section>
