@model Projet2_Archivage.Models.Etudiant
@{
    ViewData["Title"] = "Notes";
    var i = 0;
    var liste = (List<Etudiant>)ViewBag.liste;
    if (liste != null)
    { i = 1; } else { i = 2; }
}


<div class="container">
    <br /><br /><br /><br />
    <div class="row">
        <div class="col-md-3">
            <a class="btn btn-info" asp-action="Ginf">Liste étudiants GINF</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-success" asp-action="Ggtr">Liste étudiants GTR</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-info" asp-action="Gindus">Liste étudiants INDUS</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-info" asp-action="Ggpmc">Liste étudiants GPMC</a>
        </div>
    </div>
    <br />
    <div class="row">

        @{ if (liste != null && liste.Count>0)
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col" class="col-md-1">#</th>
                            <th scope="col" class="col-md-3">CNE</th>
                            <th scope="col" class="col-md-3">NOM</th>
                            <th scope="col" class="col-md-3">PRENOM</th>
                            <th scope="col" class="col-md-2">NOTE</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var et in liste)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>@et.cne</td>
                                <td>@et.nom</td>
                                <td>@et.prenom</td>
                                <td>@et.note</td>
                            </tr>
                            i++;
                        }

                    </tbody>
                </table>
                <div class="row">
                    <div class="col text-center">
                        <a class="btn btn-info" asp-action="GinfExcel">Exportez la liste vers Excel</a>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-primary" role="alert">
                    La liste est vide !
                </div>
            }
        }
    </div>
</div>


